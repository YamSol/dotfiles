{
  "workbench.sideBar.location": "right",
  "editor.fontSize": 14,
  "workbench.colorTheme": "Visual Studio 2017 Light - C++",
  "editor.fontLigatures": true,
  "editor.rulers": [80, 120],
  "workbench.iconTheme": "symbols",
  "editor.fontFamily": "JetBrains Mono",
  "explorer.compactFolders": false,
  "editor.tabSize": 2,

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "c-cpp-compile-run.should-show-notifications": false,
  "c-cpp-compile-run.output-location": "",
  "security.workspace.trust.untrustedFiles": "open",
  "cmake.showOptionsMovedNotification": false,
  "symbols.hidesExplorerArrows": false,
  "editor.lineHeight": 1.8,
  "workbench.startupEditor": "newUntitledFile",
  "editor.renderLineHighlight": "gutter",
  "git.autofetch": true,
  "workbench.editor.labelFormat": "default",
  "editor.semanticHighlighting.enabled": false,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.horizontal": "hidden",
  "workbench.statusBar.visible": false,
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 11,
      "y": 10
    }
  },
  "apc.header": {
    "height": 36
  },
  "apc.listRow": {
    "height": 24
  },
  "apc.stylesheet": {
    ".title-label > h2": "display: none",
    ".editor-actions": "display: none",
    ".pane-body": "padding: 8px",
    ".pane-header": "padding: 0 8px"
    // ".window-controls-container": "width: 110px"
  },
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false, // barra de cima de pesquisa
  "workbench.editorAssociations": {
    "*.pdf": "default"
  },
  "cSpell.language": "en,pt,pt-BR",
  "cSpell.allowCompoundWords": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "cSpell.userWords": [
    "knexfile"
  ],
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "files.autoSave": "afterDelay",
  "editor.lineNumbers": "relative",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
