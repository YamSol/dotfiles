## 3.3 WINDOWS

# 3.3.1 resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # Grow/shrink width/height
        bindsym Left  resize shrink width  $WIN_CHANGE px or 10 ppt
        bindsym Down  resize grow   height $WIN_CHANGE px or 10 ppt
        bindsym Up    resize shrink height $WIN_CHANGE px or 10 ppt
        bindsym Right resize grow   width  $WIN_CHANGE px or 10 ppt
        # # alternative 1
        # bindsym j        resize shrink width  $WIN_CHANGE px or $WIN_CHANGE ppt
        # bindsym k        resize grow   height $WIN_CHANGE px or $WIN_CHANGE ppt
        # bindsym l        resize shrink height $WIN_CHANGE px or $WIN_CHANGE ppt
        # bindsym ccedilla resize grow   width  $WIN_CHANGE px or $WIN_CHANGE ppt
        # # alternative 2
        # # Left, Down, Up Right
        # bindcode 83 resize shrink width  $WIN_CHANGE px or 10 ppt
        # bindcode 88 resize grow   height $WIN_CHANGE px or 10 ppt
        # bindcode 80 resize shrink height $WIN_CHANGE px or 10 ppt
        # bindcode 85 resize grow   width  $WIN_CHANGE px or 10 ppt


        # SAME, but /2 of the change

        bindsym Ctrl+Left  resize shrink width  $WIN_CHANGE_1_2 px or 10 ppt
        bindsym Ctrl+Down  resize grow   height $WIN_CHANGE_1_2 px or 10 ppt
        bindsym Ctrl+Up    resize shrink height $WIN_CHANGE_1_2 px or 10 ppt
        bindsym Ctrl+Right resize grow   width  $WIN_CHANGE_1_2 px or 10 ppt
        # # alternative 1
        # bindsym Ctrl+j        resize shrink width  $WIN_CHANGE_1_2 px or $WIN_CHANGE_1_2 ppt
        # bindsym Ctrl+k        resize grow   height $WIN_CHANGE_1_2 px or $WIN_CHANGE_1_2 ppt
        # bindsym Ctrl+l        resize shrink height $WIN_CHANGE_1_2 px or $WIN_CHANGE_1_2 ppt
        # bindsym Ctrl+ccedilla resize grow   width  $WIN_CHANGE_1_2 px or $WIN_CHANGE_1_2 ppt
        # # alternative 2
        # # Left, Down, Up Right
        # bindcode Ctrl+83 resize shrink width  $WIN_CHANGE_1_2 px or 10 ppt
        # bindcode Ctrl+88 resize grow   height $WIN_CHANGE_1_2 px or 10 ppt
        # bindcode Ctrl+80 resize shrink height $WIN_CHANGE_1_2 px or 10 ppt
        # bindcode Ctrl+85 resize grow   width  $WIN_CHANGE_1_2 px or 10 ppt

        # exit mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

